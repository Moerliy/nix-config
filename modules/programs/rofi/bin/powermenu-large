#!/usr/bin/env bash

## Author : Aditya Shakya (adi1090x)
## Github : @adi1090x
#
## Rofi   : Power Menu

# Current Theme
theme="$HOME/.config/rofi/powermenu-large.rasi"
confirm_theme="${HOME}/.config/rofi/confirm.rasi"
HOST="$(hostname)"

# CMDs
uptime="$(
  awk '{t=$1;d=int(t/86400);t%=86400;h=int(t/3600);t%=3600;m=int(t/60);
  if (d>0) printf "up %d days, ", d;
  if (h>0) printf "%d hours, ", h;
  printf "%d minutes\n", m;}' /proc/uptime
)"

UPTIME_MAX_LENGHT=30
# cut mesg if longer then $UPTIME_MAX_LENGHT
if [ ${#mesg} -gt $UPTIME_MAX_LENGHT ]; then
  mesg="${mesg:0:UPTIME_MAX_LENGHT}..."
fi

# Options
shutdown='  Shutdown'
reboot='  Reboot'
lock='  Lock'
suspend='  Suspend'
logout='  Logout'
close='  Close'
yes=' Yes'
no='  No'

urgent="-u 5"

# Rofi CMD
rofi_cmd() {
  rofi -dmenu \
    -p "$HOST" \
    -mesg "Uptime: $uptime" \
    ${urgent} \
    -theme ${theme}
}

# Confirmation CMD
confirm_cmd() {
  rofi -theme-str 'window {location: center; anchor: center; fullscreen: false; width: 350px;}' \
    -theme-str 'mainbox {children: [ "message", "listview" ];}' \
    -theme-str 'listview {columns: 2; lines: 1;}' \
    -theme-str 'element-text {horizontal-align: 0.5;}' \
    -theme-str 'textbox {horizontal-align: 0.5;}' \
    -dmenu \
    -p 'Confirmation' \
    -mesg 'Are you Sure?' \
    -theme ${theme}
}

# Ask for confirmation
confirm_exit() {
  echo -e "$yes\n$no" | confirm_cmd
}

# Pass variables to rofi dmenu
run_rofi() {
  echo -e "$lock\n$suspend\n$logout\n$reboot\n$shutdown\n$close" | rofi_cmd
}

# Execute Command
run_cmd() {
  selected="$(confirm_exit)"
  if [[ "$selected" == "$yes" ]]; then
    if [[ $1 == '--shutdown' ]]; then
      systemctl poweroff
    elif [[ $1 == '--reboot' ]]; then
      systemctl reboot
    elif [[ $1 == '--suspend' ]]; then
      mpc -q pause
      amixer set Master mute
      systemctl suspend
    elif [[ $1 == '--logout' ]]; then
      if [[ "$DESKTOP_SESSION" == 'openbox' ]]; then
        openbox --exit
      elif [[ "$DESKTOP_SESSION" == 'bspwm' ]]; then
        bspc quit
      elif [[ "$DESKTOP_SESSION" == 'i3' ]]; then
        i3-msg exit
      elif [[ "$DESKTOP_SESSION" == 'plasma' ]]; then
        qdbus org.kde.ksmserver /KSMServer logout 0 0 0
      elif [[ "$DESKTOP_SESSION" == 'hyprland' ]]; then
        loginctl terminate-user "$USER"
      fi
    fi
  else
    exit 0
  fi
}

# Actions
chosen="$(run_rofi)"
case ${chosen} in
$shutdown)
  run_cmd --shutdown
  ;;
$reboot)
  run_cmd --reboot
  ;;
$lock)
  hyprlock
  ;;
$suspend)
  run_cmd --suspend
  ;;
$logout)
  run_cmd --logout
  ;;
$close)
  killall rofi
  ;;
esac
